<%= simple_form_for product do |f| %>
  <%= f.error_notification %>
    <%= f.input :name %>
    <%= f.input :price %>
    <%= f.input :description %>
    <p id="count-product">1000characters remaining</p>
    <%= f.input :category %>
    <%= f.input :photo %>
    <%= f.input :photo_cache, as: :hidden %>
    <%= f.submit class: 'main-btn' %>
<% end %>

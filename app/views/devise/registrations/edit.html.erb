<div class="container">
  <div class="form-wrapper">
    <h1><i class="fa fa-cog"></i>&nbsp;&nbsp;Edit <%= resource_name.to_s.humanize %></h1>

    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :first_name, required: true %>
        <%= f.input :last_name, required: true %>
        <%= f.input :phone_number, required: true %>
        <%= f.input :district, required: true, collection: ["Ahuntsic-Cartierville",
          "Anjou",
          "CÃ´te-des-Neiges",
          "Notre-Dame-de-Grce",
          "Lachine",
          "La Salle",
          "Le Plateau-Mont-Royal",
          "Le Sud-Ouest",
          "Ile-Bizard",
          "Sainte-Genevive",
          "Mercier",
          "Hochelaga-Maisonneuve",
          "Montral-Nord",
          "Outremont",
          "Pierrefonds-Roxboro",
          "Rivire-des-Prairies",
          "Pointe-aux-Trembles",
          "Rosemont",
          "La Petite-Patrie",
          "Saint-Laurent",
          "Saint-Lonard",
          "Verdun",
          "Ville-Marie",
          "Villeray-Saint-Michel-Parc-Extension"] %>

        <%= f.input :email, required: true, autofocus: true %>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
        <% end %>

        <%= f.input :photo %>
        <%= f.input :photo_cache, as: :hidden %>

        <%= f.input :password, autocomplete: "off", hint: "leave it blank if you don't want to change it", required: false %>
        <%= f.input :password_confirmation, required: false %>
        <%= f.input :current_password, hint: "we need your current password to confirm your changes", required: true %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Update", class: 'main-btn' %>
      </div>
    <% end %>
    <hr>
    <h3><i class="fas fa-user-times"></i>&nbsp;&nbsp;Delete my account</h3>

    <p>Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>
    <hr>
    <%= link_to "Go Back", :back %>
  </div>
</div>
